{
	"name": "refatorex",
	"publisher": "gp-pereira",
	"displayName": "RefactorEx",
	"description": "Fast and reliable Elixir refactoring",
	"version": "0.0.1",
	"author": {
		"name": "gp-pereira",
		"url": "https://www.github.com/gp-pereira"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/gp-pereira/refactorex"
	},
	"bugs": {
		"url": "https://github.com/gp-pereira/refactorex/issues"
	},
	"engines": {
		"vscode": "^1.73.0"
	},
	"categories": [
		"Programming Languages",
		"Other"
	],
	"activationEvents": [
		"onLanguage:elixir"
	],
	"keywords": [
		"elixir",
		"refactor",
		"code actions",
		"keybindings",
		"language server"
	],
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Refactorex",
			"properties": {
				"refactorex.devPort": {
					"type": "string",
					"description": "Port number for a local RefactorEx server",
					"default": ""
				}
			}
		}
	},
	"icon": "icon.png",
	"main": "./out/extension.js",
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint \"src/**/*.ts\"",
		"watch": "tsc -watch -p ./"
	},
	"dependencies": {
		"vscode-languageclient": "^9.0.1"
	},
	"devDependencies": {
		"@types/node": "^18",
		"@types/vscode": "^1.73.0",
		"@typescript-eslint/eslint-plugin": "^6.7.0",
		"@typescript-eslint/parser": "^6.7.0",
		"eslint": "^8.26.0",
		"typescript": "^5.4.2"
	}
}
